	background-color transparent
	border-radius 10px
::-webkit-scrollbar-thumb
	background-color #AAAAAA
	border-radius 10px
@media ( max-width 1400px ) and ( max-height 720px )
	.js-minilogo 
		img
			max-width 100px
	.js-container
		padding-top 80px
	.js-button-next
		&.js-fixed--top
			bottom 10px
@media ( max-width: 1400px )
	.js-carousel
		max-width 750px
@media ( max-width: 1200px )
	.js-carousel
		max-width 500px
		&.js-5cards
			max-width 1000px
	.js-minilogo
		left 30px 
		&.js-minilogo__right
			img
				max-width 155px
		img
			max-width 100px
	.js-window5
		.js-container
			height 100%
			overflow-y scroll
			display inherit
			padding 75px 20px
			.js-card__flex
				display inherit
				.js-formulario
				.js-card-confirmacion
					float left
				.js-formulario
					max-width 100%
	.js-title
		max-width 550px
		margin-left 30px
		h1
			font-size 50px
			line-height 50px
		p
			font-size 24px
			line-height 28px
	.owl-theme 
		.owl-nav
			.owl-prev
				margin-left -20px
	.js-chat
		max-width 60px
		padding 8px
		right 15px
		bottom 15px
		top initial
		label
			display none
@media ( max-width: 1000px )
	.js-carousel
		&.js-5cards
			max-width 750px
@media ( max-width: 768px )
	.js-minilogo 
		&.js-minilogo__right
			img
				display none
	.js-title
		max-width 420px
		h1
			font-size 42px
			line-height 44px
		p
			font-size 20px
			line-height 24px
	.js-card--large
		margin 10px auto
	.js-carousel
		&.js-5cards
		&.js-3cards
			max-width 500px
		&.js-cards
			max-width 500px
@media ( max-width: 600px )
	.js-container
		align-items center
		justify-content flex-start
		overflow-y scroll
		height 100%
		padding 100px 20px
	// .js-carousel
	// 	max-width 260px
	// 	margin 0 auto
	.js-title
		max-width 240px
		margin-left 20px
		h1
			font-size 32px
			line-height 34px
		p
			font-size 16px
			line-height 20px
	.js-minilogo
		left 20px
		img
			max-width 75px
	.js-window1 
		h2
			font-size 40px
			line-height 42px
	.js-question--title
		margin-bottom 5px
	.js-question--number
		text-align center
		font-size 32px
		line-height 34px
		margin 0
		h2
			font-size 24px
			line-height 26px
	.owl-theme 
		.owl-nav
			.owl-prev
				margin-left 0
			.owl-next
				margin-right 0
	.js-card--show
		.owl-carousel 
			.owl-stage-outer
				overflow initial
	.js-chat
		right 10px
		bottom 10px
		padding 5px
		max-width 50px
		img
			max-width 40px
	.js-header--logo
		padding 10px 0 10px 20px
		max-width 210px
		p
			font-size 13px
			line-height 16px
	.js-header
		&.js-header--configurator 
			.js-header__bgcolor
				max-width 30px
	.js-card--empresa
		display block
		margin auto
		padding-bottom 50px
	.js-datos
		flex-wrap wrap
		.js-datos__personal
			margin 5px 0
		.js-datos__separacion
			margin 5px 0
		.js-datos__linkedin
			margin 10px 0 5px 0
	.js-wizard
		max-width 200px
		.js-step
			span
				position absolute
				display none
				&.active
					display inline-block
					background-color $color
					border-color $color
		.js-progress
			display none
@media ( max-width: 480px )
	.js-carousel
		&.js-3cards
			max-width 250px	
			margin auto
