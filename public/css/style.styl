/*ANIMACIONES*/
@-webkit-keyframes js-buttonscroll--animate
	0%
		-webkit-transform translateY(10px)
	30%
		-webkit-transform translateY(-20px)
	60%
		-webkit-transform translateY(15px)
@keyframes js-buttonscroll--animate
	0%
		-webkit-transform translateY(10px)
	30%
		-webkit-transform translateY(-20px)
	60%
		-webkit-transform translateY(15px)
@-webkit-keyframes js-ripple--animate
	0%
		-webkit-transform translateY(-25px)
		opacity 0
	50%
		opacity 1
	100%
		-webkit-transform translateY(20px)
		opacity 0
@keyframes js-ripple--animate
	0%
		-webkit-transform translateY(-25px)
		opacity 0
	50%
		opacity 1
	100%
		-webkit-transform translateY(20px)
		opacity 0
